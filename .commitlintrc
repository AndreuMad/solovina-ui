{
  "rules": {
    "body-leading-blank": [2, "always"],
    "body-max-length": [1, "always", 1000],
    "body-min-length": [1, "always", 0],
    "body-tense": [1, "always", ["present-imperative"]],
    "footer-leading-blank": [2, "always"],
    "footer-max-length": [1, "always", 1000],
    "footer-min-length": [1, "always", 0],
    "footer-tense": [1, "always", ["present-imperative"]],
    "header-max-length": [1, "always", 72],
    "header-min-length": [1, "always", 0],
    "lang": [1, "always", "eng"],
    "scope-enum": [2, "always", []],
    "scope-case": [1, "always", "lowerCase"],
    "scope-empty": [1, "never"],
    "scope-max-length": [1, "always", 1000],
    "scope-min-length": [1, "always", 0],
    "subject-case": [1, "always", "lowerCase"],
    "subject-empty": [2, "never"],
    "subject-full-stop": [2, "never"],
    "subject-max-length": [1, "always", 1000],
    "subject-min-length": [1, "always", 0],
    "subject-tense": [1, "always", ["present-imperative"]],
    "type-enum": [
      2, "always", [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "type-case": [2, "always", "lowerCase"],
    "type-empty": [2, "never"],
    "type-max-length": [1, "always", 1000],
    "type-min-length": [1, "always", 0],
    "signed-off-by": [
      0, "always"
    ]
  }
}
